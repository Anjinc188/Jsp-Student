<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet> <!--注册事件-->
        <servlet-name>registered</servlet-name>
        <servlet-class>test.Servlet.ServletUserRegister</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>registered</servlet-name>
        <url-pattern>/registered</url-pattern>
    </servlet-mapping>



    <servlet>  <!--登录绑定-->
        <servlet-name>UserloginServlet</servlet-name>
        <servlet-class>test.Servlet.UserloginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UserloginServlet</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>



    <servlet>  <!--增加学生信息-->
        <servlet-name>AddStudent</servlet-name>
        <servlet-class>test.Servlet.AddStudent</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AddStudent</servlet-name>
        <url-pattern>/addstudent</url-pattern>
    </servlet-mapping>



    <servlet>   <!--查看学生信息-->
        <servlet-name>SelectStudent</servlet-name>
        <servlet-class>test.Servlet.SelectStudent</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>SelectStudent</servlet-name>
        <url-pattern>/SelectStudent</url-pattern>
    </servlet-mapping>

    <servlet>   <!--删除-->
        <servlet-name>ServletDeleteUser</servlet-name>
        <servlet-class>test.Servlet.ServletDeleteUser</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ServletDeleteUser</servlet-name>
        <url-pattern>/ServletDeleteUser</url-pattern>
    </servlet-mapping>


    <servlet>   <!--修改学生信息-->
        <servlet-name>UpdataStudent</servlet-name>
        <servlet-class>test.Servlet.UpdateStudent</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UpdataStudent</servlet-name>
        <url-pattern>/UpdataStudent</url-pattern>
    </servlet-mapping>


    <servlet>   <!--管理员密码-->
        <servlet-name>UpdatePassword</servlet-name>
        <servlet-class>test.Servlet.UpdatePassword</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UpdatePassword</servlet-name>
        <url-pattern>/UpdatePassword</url-pattern>
    </servlet-mapping>

</web-app>